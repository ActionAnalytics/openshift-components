{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "taiga-front-build-template",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "taiga-front",
        "creationTimestamp": null,
        "labels": {
          "app": "taiga-front"
        },
        "annotations": {
          "openshift.io/generated-by": "OpenShiftWebConsole"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_UPSTREAM_URL}",
            "ref": "${GIT_UPSTREAM_REF}"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "nodejs:6"
            },
            "scripts": "${GIT_SCRIPTS_BASE_URL}"
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "taiga-front:${GIT_UPSTREAM_REF}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "4",
            "memory": "4Gi"
          }
        },
        "postCommit": {},
        "nodeSelector": null
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "taiga-front-runtime",
        "creationTimestamp": null,
        "labels": {
          "app": "taiga-front"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "from": {
                "kind": "ImageStreamTag",
                "name": "taiga-front:${GIT_UPSTREAM_REF}"
              }
            }
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "contextDir": "${GIT_RUNTIME_CADDY_CONTEXT_DIR}",
          "git": {
            "uri": "${GIT_RUNTIME_URL}",
            "ref": "${GIT_RUNTIME_REF}"
          },
          "images": [
            {
              "from": {
                "kind": "ImageStreamTag",
                "name": "taiga-back:${GIT_UPSTREAM_REF}"
              },
              "paths": [
                {
                  "sourcePath": "/opt/app-root/src/static/.",
                  "destinationDir": "${GIT_RUNTIME_CADDY_CONTEXT_DIR}/static"
                }
              ]
            },
            {
              "from": {
                "kind": "ImageStreamTag",
                "name": "taiga-front:${GIT_UPSTREAM_REF}"
              },
              "paths": [
                {
                  "sourcePath": "/opt/app-root/src/dist/.",
                  "destinationDir": "${GIT_RUNTIME_CADDY_CONTEXT_DIR}"
                }
              ]
            }
          ]
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "bcgov-s2i-caddy:latest"
            },
            "env": [
              {
                "name": "BUILD_LOGLEVEL",
                "value": "0"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "taiga-front-runtime:${GIT_UPSTREAM_REF}",
            "namespace": "${RUNTIME_OUTPUT_NAMESPACE}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "500m",
            "memory": "4Gi"
          }
        },
        "postCommit": {},
        "completionDeadlineSeconds": 1800,
        "nodeSelector": null
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "taiga-front",
        "labels": {
          "app": "taiga-front"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "taiga-front-runtime",
        "labels": {
          "app": "taiga-front"
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "GIT_UPSTREAM_URL",
      "required": true,
      "value": "https://github.com/taigaio/taiga-front.git"
    },
    {
      "name": "GIT_UPSTREAM_REF",
      "required": true,
      "value": "3.3.8"
    },
    {
      "name": "GIT_SCRIPTS_BASE_URL",
      "required": true,
      "value": "https://raw.githubusercontent.com/BCDevOps/openshift-components/master/apps/taiga/front/nodejs/.s2i/bin"
    },
    {
      "name": "GIT_RUNTIME_URL",
      "required": true,
      "value": "https://github.com/BCDevOps/openshift-components"
    },
    {
      "name": "GIT_RUNTIME_REF",
      "required": true,
      "value": "master"
    },
    {
      "name": "GIT_RUNTIME_NODEJS_CONTEXT_DIR",
      "required": true,
      "value": "apps/taiga/front/nodejs"
    },
    {
      "name": "GIT_RUNTIME_CADDY_CONTEXT_DIR",
      "required": true,
      "value": "apps/taiga/front/caddy"
    },
    {
      "name": "RUNTIME_OUTPUT_NAMESPACE",
      "value": "devops-platform-support-tools"
    }
  ]
}
